{{#destination}}
<p>
  <b>
    <span class="number label label-default{{^active}} label-empty{{/active}}" style="background-color: {{color}};">{{number}}</span>
    {{name}}
  </b></br>
  {{street}}</br>
  {{#detail}}
    {{detail}}</br>
  {{/detail}}
  {{postalcode}} {{city}}
</p>
<ul>
  {{#open}}<li>{{#i18n}}plannings.edit.popup.open{{/i18n}} {{open}}</li>{{/open}}
  {{#close}}<li>{{#i18n}}plannings.edit.popup.close{{/i18n}} {{close}}</li>{{/close}}
  {{#time}}<li> {{#i18n}}plannings.edit.popup.time{{/i18n}} <i class="icon icon-time icon-fixed-width"></i> {{time}}</li>{{/time}}
  {{#quantity}}<li>{{#i18n}}plannings.edit.popup.quantity{{/i18n}} <i class="icon icon-gift icon-fixed-width"></i> {{quantity}}</li>{{/quantity}}
</ul>
{{#comment}}
  <p>{{comment}}</p>
{{/comment}}
{{#error}}
  <ul class="ui-state-error">
    {{#out_of_window}}
      <li><i class="icon icon-time icon-fixed-width"></i> {{#i18n}}plannings.edit.error.out_of_window{{/i18n}}</li>
    {{/out_of_window}}
    {{#out_of_capacity}}
      <li><i class="icon icon-gift icon-fixed-width"></i> {{#i18n}}plannings.edit.error.out_of_capacity{{/i18n}}</li>
    {{/out_of_capacity}}
    {{#out_of_drive_time}}
      <li><i class="icon icon-power-off icon-fixed-width"></i> {{#i18n}}plannings.edit.error.out_of_drive_time{{/i18n}}</li>
    {{/out_of_drive_time}}
  </ul>
{{/error}}
{{/destination}}
