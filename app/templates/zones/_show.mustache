<div class="zone">
  <input name="zoning[zones][][polygon]" type="hidden" value="{{polygon}}"/>
  <span class="input-group">
    <select name="zoning[zones][][vehicles][][vehicle_id]" multiple="multiple">
      {{#vehicles}}
        <option value={{id}}{{#selected}} selected="selected"{{/selected}}>{{name}}</option>
      {{/vehicles}}
    </select>
    <span class="input-group-addon input-sm"><i class="icon-truck"></i></span>
  </span>
  <button type="button" class="delete btn btn-default btn-xs"><i class="icon-trash icon-fixed-width"></i></button>
</div>
