<h1><%= t '.title' %></h1>

<%= twitter_bootstrap_form_for(@destinations_import, {layout: :horizontal, multipart: true}) do |f| %>
  <%= render 'shared/error_messages', model: @destinations_import %>
  <%= f.file_field :file do %>
    <p class="help-block"><%= t '.file_help' %></p>
  <% end %>
  <%= f.toggles t 'activemodel.attributes.destinations_import_model.replace' do %>
    <%= f.check_box :replace %>
    <p class="help-block"><%= t '.replace_help' %></p>
  <% end %>
  <%= f.actions do %>
    <%= f.submit t 'all.verb.send' %>
  <% end %>
<% end %>

<div id="dialog-upload" title="<%= t '.dialog.title' %>" style="display:none">
  <p><%= t '.dialog.import_in_progress' %></p>
  <div class="progress progress-striped active">
    <div class="progress-bar" style="width: 100%">
  </div>
</div>
