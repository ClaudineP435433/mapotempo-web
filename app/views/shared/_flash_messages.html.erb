
<script type="text/javascript">
  $(document).on('page:change', function() {
    <% flash.each do |k, v| %>
      <% if k == 'notice' %>
        notice(<%= v.to_json.html_safe %>);
      <% elsif k == 'error' %>
        error(<%= v.to_json.html_safe %>);
      <% end %>
    <% end %>
  });
</script>
