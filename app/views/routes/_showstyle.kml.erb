<Style id="route-<%= route.id %>">
  <LineStyle>
    <color>cc<%= route.default_color[1..-1].scan(/../).reverse.join %></color>
    <width>3</width>
  </LineStyle>
</Style>
<Style id="route-<%= route.id %>-store">
  <IconStyle>
    <Icon>
      <href>marker-home.png</href>
    </Icon>
    <color>cc<%= route.default_color[1..-1].scan(/../).reverse.join %></color>
    <width>3</width>
  </IconStyle>
</Style>
<Style id="route-<%= route.id %>-point">
  <IconStyle>
    <Icon>
      <href>point-<%= route.default_color[1..-1] %>.png</href>
    </Icon>
    <color>cc<%= route.default_color[1..-1].scan(/../).reverse.join %></color>
    <width>3</width>
  </IconStyle>
</Style>
