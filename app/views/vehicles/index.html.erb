<h1>Listing vehicles</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Open</th>
      <th>Close</th>
      <th>Emission</th>
      <th>Consumption</th>
      <th>Capacity</th>
      <th>Color</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.name %></td>
        <td><%= if(vehicle.open) then vehicle.open.strftime("%H:%M") end %></td>
        <td><%= if(vehicle.close) then vehicle.close.strftime("%H:%M") end %></td>
        <td><%= vehicle.emission %></td>
        <td><%= vehicle.consumption %></td>
        <td><%= vehicle.capacity %></td>
        <td><div class="vehicle_color" style="background:<%= vehicle.color %>"/></td>
        <td><%= link_to edit_vehicle_path(vehicle) do %><i class="icon-edit icon-fixed-width"></i> Edit<% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
