<h1>Listing vehicles</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Open</th>
      <th>Close</th>
      <th>Emission</th>
      <th>Consumption</th>
      <th>Capacity</th>
      <th>Color</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.name %></td>
        <td><%= vehicle.open %></td>
        <td><%= vehicle.close %></td>
        <td><%= vehicle.emission %></td>
        <td><%= vehicle.consumption %></td>
        <td><%= vehicle.capacity %></td>
        <td><div class="vehicle_color" style="background:<%= vehicle.color %>"/></td>
        <td><%= link_to edit_vehicle_path(vehicle) do %><i class="icon-edit icon-fixed-width"></i> Edit<% end %></td>
        <td><%= link_to vehicle, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="icon-remove icon-fixed-width"></i> Destroy<% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path %>
