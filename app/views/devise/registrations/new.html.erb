<h1><%= t('.sign_up', default: "Sign up") %></h1>

<%= twitter_bootstrap_form_for resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
  <%= f.actions do %>
    <%= f.submit t('.sign_up', default: "Sign up") %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
