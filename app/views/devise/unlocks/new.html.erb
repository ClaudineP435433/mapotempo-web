<h1><%= t('.resend_unlock_instructions', default: "Resend unlock instructions") %></h1>

<%= twitter_bootstrap_form_for resource, as: resource_name, url: unlock_path(resource_name), layout: :horizontal do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email %>
  <%= f.actions do %>
    <%= f.submit t('.resend_unlock_instructions', default: "Resend unlock instructions") %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
