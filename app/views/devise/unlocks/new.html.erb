<h1><%= t('.resend_unlock_instructions', default: "Resend unlock instructions") %></h1>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <%= f.label :email, class: 'col-lg-2 control-label' %>
    <span class="col-lg-4"><%= f.email_field :email, class: 'form-control' %></span>
  </div>

  <div class="row">
    <div class="col-lg-offset-2">
      <%= f.submit t('.resend_unlock_instructions', default: "Resend unlock instructions"), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
