<h1><%= t('.sign_in', default: "Sign in") %></h1>

<%= twitter_bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :horizontal) do |f| %>
  <%= f.text_field :email %>
  <%= f.password_field :password %>
  <% if devise_mapping.rememberable? -%>
    <div class="col-md-offset-2">
      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    </div>
  <% end -%>
  <%= f.actions do %>
    <%= f.submit t('.sign_in', default: "Sign in"), {}, 'fa-check' %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
