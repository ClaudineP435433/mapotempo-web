<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1><%= t('.sign_in', default: "Sign in") %></h1>
      </div>
      <div class="panel-body">
        <%= twitter_bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), default_label_class: 'col-md-3 control-label', layout: :horizontal) do |f| %>
          <%= f.text_field :email %>
          <%= f.password_field :password %>
          <% if devise_mapping.rememberable? -%>
            <div class="col-md-offset-3">
              <%= f.check_box :remember_me, t('.remember_me'), checked: true %>
            </div>
          <% end -%>
          <%= f.actions(class: 'col-md-offset-3 col-md-6') do %>
            <%= f.submit t('.sign_in', default: "Sign in"), {}, 'fa-check' %>
          <% end %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
