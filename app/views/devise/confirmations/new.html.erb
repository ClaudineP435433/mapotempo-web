<h1><%= t('.resend_confirmation_instructions', default: 'Resend confirmation instructions') %></h1>

<%= twitter_bootstrap_form_for resource, as: resource_name, url: confirmation_path(resource_name), layout: :horizontal do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email %>
  <%= f.actions do %>
    <%= f.submit t('.resend_confirmation_instructions', default: 'Resend confirmation instructions'), {}, 'fa-check' %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
