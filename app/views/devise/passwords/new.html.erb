<h1><%= t('.forgot_your_password', default: 'Forgot your password?') %></h1>

<%= twitter_bootstrap_form_for resource, as: resource_name, url: password_path(resource_name), layout: :horizontal, default_div_class: 'col-lg-6' do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email %>
  <%= f.actions do %>
    <%= f.submit t('.send_me_reset_password_instructions', default: 'Send me reset password instructions') %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
