<h1><%= t('.forgot_your_password', default: 'Forgot your password?') %></h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <%= f.label :email, class: 'col-lg-2 control-label' %>
    <span class="col-lg-4"><%= f.email_field :email, class: 'form-control' %></span>
  </div>
  <div class="row">
    <div class="col-lg-offset-2">
      <%= f.submit t('.send_me_reset_password_instructions', default: 'Send me reset password instructions'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
