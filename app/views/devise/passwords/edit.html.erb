<h1><%= t('.change_your_password', default: 'Change your password') %></h1>

<%= twitter_bootstrap_form_for resource, as: resource_name, url: password_path(resource_name), method: :put, layout: :horizontal do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
  <%= f.actions do %>
    <%= f.submit t('.change_my_password', default: 'Change my password') %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
