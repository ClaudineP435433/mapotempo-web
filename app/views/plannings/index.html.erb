<h1>Listing plannings</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Tags</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @plannings.each do |planning| %>
      <tr>
        <td><%= planning.name %></td>
        <td>
        <% planning.tags.each{ |tag| %>
          <%= tag.label %>
        <% } %>
        </td>
        <td><%= link_to edit_planning_path(planning) do %><i class="icon-edit icon-fixed-width"></i> Edit<% end %></td>
        <td><%= link_to planning, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="icon-remove icon-fixed-width"></i> Destroy<% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Planning', new_planning_path %>
