<h1><%= t '.title' %></h1>

<p>
  <%= link_to new_planning_path, class:"btn btn-default btn-sm" do %><i class="icon icon-plus icon-fixed-width"></i> <%= t '.new' %><% end %>
</p>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= t 'activerecord.attributes.planning.name' %></th>
      <th><%= t 'activerecord.attributes.planning.tags' %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @plannings.each do |planning| %>
      <tr>
        <td><%= planning.name %></td>
        <td>
        <% planning.tags.each{ |tag| %>
          <%= tag.label %>
        <% } %>
        </td>
        <td class="text-right">
          <%= link_to edit_planning_path(planning), :class => "btn btn-primary btn-sm" do %><i class="icon icon-edit icon-fixed-width"></i> <%= t 'all.verb.edit' %><% end %>
          <%= link_to planning, :class => "btn btn-danger btn-sm", method: :delete, data: { confirm: t('all.verb.destroy_confirm') } do %><i class="icon icon-remove icon-fixed-width"></i> <%= t 'all.verb.destroy' %><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

