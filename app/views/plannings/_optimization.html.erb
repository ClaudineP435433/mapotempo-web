<div class="btn-group">
  <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" title="<%= t 'plannings.edit.optimize_routes' %>">
    <i class="fa fa-gears"></i>
    <span class="caret"></span>
  </button>

  <ul id="toggle_optimization_dropdown" class="dropdown-menu" role="menu">
    <li class="dropdown-title">
      <%= t 'plannings.edit.optimize_global.title' %>
    </li>
    <li>
      <a <% if @planning.customer.enable_global_optimization? %>id="optimize_global_actives" data-opti-global="true" data-active-only="true" href="#"<% else %>class="disabled"<% end %> title="<%= t('unlock_operation.default') + ' - ' unless @planning.customer.enable_global_optimization? %><%= t 'plannings.edit.optimize_global.active_help' %>">
        <i class="fa fa-check-square-o fa-fw"></i>
        <%= t 'plannings.edit.optimize_global.active_stops' %>
      </a>
    </li>
    <li>
      <a <% if @planning.customer.enable_global_optimization? %>id="optimize_global_all" data-opti-global="true" data-active-only="false" href="#"<% else %>class="disabled"<% end %> title="<%= t('unlock_operation.default') + ' - ' unless @planning.customer.enable_global_optimization? %><%= t 'plannings.edit.optimize_global.all_help' %>">
        <i class="fa fa-plus-square-o fa-fw"></i>
        <%= t 'plannings.edit.optimize_global.all_stops' %>
      </a>
    </li>

    <li role="separator" class="divider"></li>

    <li class="dropdown-title">
      <%= t 'plannings.edit.optimize_each.title' %>
    </li>
    <li>
      <a id="optimize_each_actives" data-opti-global="false" data-active-only="true" href="#" title="<%= t 'plannings.edit.optimize_each.active_help' %>">
        <i class="fa fa-check-square-o fa-fw"></i>
        <%= t 'plannings.edit.optimize_each.active_stops' %>
      </a>
    </li>
    <li>
      <a id="optimize_each_all" data-opti-global="false" data-active-only="false" href="#" title="<%= t 'plannings.edit.optimize_each.all_help' %>">
        <i class="fa fa-plus-square-o fa-fw"></i>
        <%= t 'plannings.edit.optimize_each.all_stops' %>
      </a>
    </li>
  </ul>
</div>
