<% content_for :title, t("errors.management.status.title.#{status}") %>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default error-panel">
      <div class="panel-heading error-heading">
        <h1><%= t("errors.management.status.title.#{status}") %></h1>
      </div>
      <div class="panel-body">
        <div class="row">
          <p class="error-details">
            <%= t("errors.management.status.explanation.#{status}") %>
          </p>

          <div class="col-md-6 text-center">
            <%= link_to t('errors.management.back_button'), :back, class: 'btn btn-primary btn-lg' %>
          </div>

          <div class="col-md-6 text-center">
            <%= link_to t('errors.management.home_button'), root_url, class: 'btn btn-default btn-lg' %>
          </div>
        </div>
        <br>
      </div>
    </div>
  </div>
</div>
