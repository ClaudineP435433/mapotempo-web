//= require jquery.simple-color

function vehicles_form() {
  $('.simple_color').simpleColor({
    cellWidth: 40,
    cellHeight: 40,
    border: '1px solid #CCCCCC',
    buttonClass: 'button',
    boxWidth: '100%',
    boxHeight: 40,
    colors: ["<%= Vehicle.colors_table.join('", "').html_safe %>"],
    columns: <%= Vehicle.colors_table.size %>
  });
}

Paloma.controller('Vehicle').prototype.new = function () {
  vehicles_form();
}

Paloma.controller('Vehicle').prototype.edit = function () {
  vehicles_form();
}
